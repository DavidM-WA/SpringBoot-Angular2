<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
<!-- Routes -->
<!-- * : any variable, ** : any sub directory or variables -->
<!-- Routes must end with variables (No routes like "/people/*/groups/*") -->
	<routes>
		<!-- api routes -->
    	<!-- user routes -->
		<route>
			<url>/api/users</url>
			<method>POST</method>
			<roles>NONE</roles>
		</route>
		<route>
			<url>/api/users/*</url>
			<method>DELETE</method>
			<roles>ADMIN</roles>
		</route>
		<route>
			<url>/api/users</url>
			<method>PUT</method>
			<roles>USER</roles>
		</route>
		<route>
			<url>/api/users</url>
			<method>GET</method>
			<roles>USER</roles>
		</route>
		<route>
			<url>/api/users/*</url>
			<method>GET</method>
			<roles>USER</roles>
		</route>
    	<!-- task routes -->
		<route>
			<url>/tasks</url>
			<method>GET</method>
			<roles>NONE</roles>
		</route>
		<route>
			<url>/tasks</url>
			<method>POST</method>
			<roles>NONE</roles>
		</route>
		<route>
			<url>/tasks/*</url>
			<method>GET</method>
			<roles>NONE</roles>
		</route>
		<route>
			<url>/tasks/*</url>
			<method>DELETE</method>
			<roles>NONE</roles>
		</route>
		<route>
			<url>/tasks</url>
			<method>PUT</method>
			<roles>NONE</roles>
		</route>
		<!-- hello routes -->
		<route>
			<url>/hello</url>
			<method>GET</method>
			<roles>NONE</roles>
		</route>
		<!-- public routes -->
    	<!-- Do not touch these -->
        <route>
            <url>/</url>
            <method>GET</method>
            <roles>NONE</roles>
        </route>
        <route>
            <url>/public/**</url>
            <method>GET</method>
            <roles>NONE</roles>
        </route>
	</routes>
</configuration>
